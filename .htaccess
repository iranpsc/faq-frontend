# Apache configuration for Next.js FAQ Frontend
# Simplified configuration to avoid server errors

# Enable URL rewriting
RewriteEngine On

# Handle Next.js static assets (_next directory) - highest priority
RewriteCond %{REQUEST_URI} ^/_next/
RewriteRule ^(.*)$ http://localhost:3005/$1 [P,L]

# Handle Next.js API routes
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^(.*)$ http://localhost:3005/$1 [P,L]

# Handle favicon and other root assets
RewriteCond %{REQUEST_URI} ^/(favicon\.ico|robots\.txt|sitemap\.xml)$
RewriteRule ^(.*)$ http://localhost:3005/$1 [P,L]

# Handle existing files and directories (serve directly from Apache)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.*)$ - [L]

# Handle all other requests (SPA routing) - proxy to Next.js
RewriteRule ^(.*)$ http://localhost:3005/$1 [P,L]

# Basic security headers (only if mod_headers is available)
<IfModule mod_headers.c>
    Header always set X-Frame-Options "DENY"
    Header always set X-Content-Type-Options "nosniff"
</IfModule>

# Basic compression (only if mod_deflate is available)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript
</IfModule>

# Basic caching (only if mod_expires is available)
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>

# Prevent directory browsing
Options -Indexes